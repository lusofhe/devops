{
  "name": "sprachenlern-app",
  "version": "1.0.0",
  "description": "Deutsch-Vietnamesischer Vokabeltrainer mit Text-to-Speech",
  "main": "app.js",
  "type": "module",
  "keywords": [
    "vocabulary",
    "language-learning",
    "german",
    "vietnamese",
    "text-to-speech",
    "education"
  ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "echo 'Build completed - using JavaScript directly'",
    "test": "jest --forceExit --detectOpenHandles --coverage --silent",
    "test:verbose": "jest --forceExit --detectOpenHandles --coverage",
    "test:watch": "jest --watch --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:ci": "eslint . --format json --output-file eslint-report.json",
    "init": "node scripts/init-database.js",
    "init:force": "node scripts/init-database.js --force",
    "setup": "npm run init && npm start",
    "db:init": "npm run init",
    "db:reset": "npm run init:force"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@jest/globals": "^29.0.0",
    "eslint": "^9.29.0",
    "jest": "^29.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^2.0.22",
    "sonar-scanner": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "clover"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "clearMocks": true,
    "restoreMocks": true,
    "testTimeout": 15000,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/tests/",
      "/public/",
      "/views/",
      "/docs/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!app.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/public/**",
      "!**/views/**",
      "!**/docs/**",
      "!scripts/init-database.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 35,
        "functions": 40,
        "lines": 40,
        "statements": 40
      }
    },
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "nodemonConfig": {
    "ignore": [
      "public/audio/*",
      "logs/*",
      "coverage/*"
    ],
    "ext": "js,json,ejs"
  }
}
